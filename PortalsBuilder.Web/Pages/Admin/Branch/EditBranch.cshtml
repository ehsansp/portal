@page "{id}"
@model PortalsBuilder.Web.Pages.Admin.Branch.EditBranchModel
@{
}
<div class="main-panel">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Branch.Id" />
        <input type="hidden" asp-for="Branch.CreatedAt" />
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">
                    ویرایش شعبه
                </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">فرم ها</a></li>
                        <li class="breadcrumb-item active" aria-current="page">عناصر ساده فرم</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">ویرایش شعبه</h4>

                            <div class="form-group">
                                <label for="exampleInputUsername1">عنوان</label>
                                <input type="text" class="form-control" asp-for="Branch.Title" placeholder="عنوان را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">توضیحات</label>
                                <input type="text" class="form-control" asp-for="Branch.Description" placeholder="توضیحات بیشتر را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">تصویر شعبه</label>
                                <input type="file" class="form-control" name="imgCourseUp" id="imgCourseUp" asp-for="Branch.Photo">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">نام مدیر</label>
                                <input type="text" class="form-control" asp-for="Branch.ManagerName" placeholder="نام مدیر را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">نام استان</label>
                                <select asp-for="Branch.ProvinceId" asp-items="@(ViewData["Groups"] as SelectList)">
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">شهر</label>
                                <input type="text" class="form-control" asp-for="Branch.City" placeholder="نام شهر را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">ساعت کاری</label>
                                <input type="text" class="form-control" asp-for="Branch.WorkTimes" placeholder="ساعت کاری را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">آدرس</label>
                                <input type="text" class="form-control" asp-for="Branch.Address" placeholder="آدرس را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">کد پستی</label>
                                <input type="text" class="form-control" asp-for="Branch.PostalCode" placeholder="کد پستی را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">شماره تماس</label>
                                <input type="text" class="form-control" asp-for="Branch.Phone" placeholder="شماره تماس را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">ایمیل</label>
                                <input type="text" class="form-control" asp-for="Branch.Email" placeholder="ایمیل را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Latitude</label>
                                <input type="text" class="form-control" asp-for="Branch.Latitude" placeholder="Latitude را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Longitude</label>
                                <input type="text" class="form-control" asp-for="Branch.Longitude" placeholder="Longitude را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">لینک</label>
                                <input type="text" class="form-control" asp-for="Branch.Link" placeholder="لینک را وارد کنید">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">لینک</label>
                                <input type="text" class="form-control" asp-for="Branch.Link" placeholder="لینک را وارد کنید">
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <label for="exampleInputUsername2">نمایش داده شود</label>
                                    <input type="checkbox" asp-for="Branch.IsActive" class="form-control" id="exampleInputUsername2">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername3">نمایش در صفحه تماس با ما</label>
                                    <input type="checkbox" asp-for="Branch.DisplayInContactPage" class="form-control" id="exampleInputUsername3">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername4">زبان انگلیسی</label>
                                    <input type="checkbox" asp-for="Branch.IsSecondLanguage" class="form-control" id="exampleInputUsername4">
                                </div>

                            </div>


                            <button type="submit" class="btn btn-primary mr-2">ثبت</button>
                            <a href="/Admin/Branch" class="btn btn-light">لغو</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                کپی رایت © 2018 . تمام حقوق
                محفوظ است.
            </span>
        </div>
    </footer>
    <!-- partial -->
</div>
