@page
@model PortalsBuilder.Web.Pages.Admin.SiteSetting.IndexModel
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                تنظیمات سایت
            </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">تنظیمات سایت</a></li>
                    <li class="breadcrumb-item active" aria-current="page">تنظیمات سایت</li>
                </ol>
            </nav>
        </div>
        <div class="card">
            <div class="card-body">
                <a href="/Admin/SiteSetting/Create" class="btn btn-outline-success">جدید</a>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>نام</th>
                                        <th>تصویر</th>
                                        <th>برند</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListSite)
                                    {
                                        <tr>
                                            <td>@item.BrandName</td>
                                            <td><img src="/article/thumb/@item.LogoPhoto" /></td>
                                            <td>@item.BrandSlogan</td>
                                            <td>
                                                <button class="btn btn-outline-danger">حذف</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                کپی رایت © 2018 . تمام حقوق
                محفوظ است.
            </span>
        </div>
    </footer>
    <!-- partial -->
</div>