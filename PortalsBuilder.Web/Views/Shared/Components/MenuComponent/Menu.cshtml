@{
}
@model IEnumerable<PortalBuilder.Core.DTOs.Menu.ShowMenuForAdminVieWModel>
<ul class="navigation clearfix">




    @foreach (var group in Model.Where(g => g.ParentId == null))
    {
        <li class="dropdown">
            <a href="@group.Link">@group.Title</a>
            @if (Model.Any(g => g.ParentId == group.Id))
            {
                <ul>
                    @foreach (var sub in Model.Where(g => g.ParentId == group.Id))
                    {
                        <li><a href="@sub.Link">@sub.Title </a></li>
                    }
                </ul>
            }
        </li>


    }


</ul>