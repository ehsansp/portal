@model PortalBuilder.Core.DTOs.Staff.PasswordViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "عضویت در هامون";
}

<div align="center" class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="" align="center">
            <!--login area start-->
            <div class="">
                <div class="styled-form login-form">
                    <h2>لطفا کلمه عبور خود را ست کنید</h2>
                    <form asp-action="SetPassword" method="post">
                        @if (@ViewBag.IsActive == true)
                        {
                            <div dir="rtl" class="alert alert-success">
                                <p class="help-block">حساب شما با موفقیت فعال شد.</p>
                            </div>


                            <script>
                                var delay = 2000;
                                setTimeout(function () { window.location = "/"; }, delay);
                            </script>
                        }
                        <p>
                            <label>کلمه عبور <span>*</span></label>
                            <input asp-for="Password" type="number">

                        </p>
                        <p>
                            <label>تکرار کلمه عبور <span>*</span></label>
                            <input asp-for="RePassword" type="number">

                        </p>
                        <div asp-validation-summary="All" class="text-danger">

                        </div>
                        <div class="login_submit">
                            <button type="submit" class="theme-btn btn-style-three"><span class="txt">ثبت </span></button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->

        </div>
    </div>
</div>