<div class="post-section store-information">
    <div class="post-ad-title">
        <i class="fas fa-folder-open"></i>
        <h3 class="item-title">اطلاعات فروشگاه</h3>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                نام فروشگاه
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="Name" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                شعار
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="Shoar" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                ایمیل
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                شماره تلفن
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="Tel" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                وب سایت
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="WebSite" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                آدرس
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <textarea class="form-control textarea" cols="30" rows="2">@Model.Address</textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                توضیحات
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <textarea class="form-control textarea" cols="30" rows="6">@Model.Description</textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                اینستاگرام
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="Instagram" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                تلگرام
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="Telegram" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label class="control-label">
                واتس اپ
            </label>
        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="text" asp-for="WhatsApp" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">

        </div>
        <div class="col-sm-9">
            <div class="form-group">
                <input type="submit" class="submit-btn" value="بروز رسانی فروشگاه">
            </div>
        </div>
    </div>
</div>
</form>
</div>
</div>
</div>
