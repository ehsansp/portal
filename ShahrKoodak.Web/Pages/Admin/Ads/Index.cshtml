@page

@model ShahrKoodak.Web.Pages.Admin.Ads.IndexModel
@{
}
@{
    ViewData["Title"] = "لیست اصناف";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست اصناف</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست اصناف سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0">

                    <a class="btn btn-outline btn-success" href="/Admin/Products/CreateProduct">افزودن صنف جدید</a>
                </div>
                <form>
                    <div class="col-sm-5 col-md-5">
                        <input type="text" name="filterProduct" class="form-control" placeholder="نام صنف" />

                    </div>
                    <div class="col-sm-5 col-md-5">
                        <input type="text" name="filterProductGroup" class="form-control" placeholder="گروه صنف" />

                    </div>
                    <div class="col-sm-2 col-md-2">
                        <button type="submit" class="btn btn-info">بگرد</button>
                        <a class="btn btn-default btn-sm" href="/Admin/Products">خالی</a>
                    </div>
                </form>

                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان آگهی</th>
                            <th>وضعیت نمایش</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListProduct)
                        {
                            <tr>
                                <td>
                                    <img src="/product/thumb/@item.ImageName" class="thumbnail" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @if (item.IsActive == true)
                                    {
                                        <p class="text-success">فعال</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">غیر فعال</p>
                                    }
                                </td>

                                <td>
                                    <a href="/Admin/Ads/Active/@item.ProductId" class="btn btn-warning btn-sm">
                                        تغییر وضعیت
                                    </a>
                                    <a href="/Admin/Products/EditProduct/@item.ProductId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                    <a href="/Admin/Products/IndexVizhegi/@item.ProductId" class="btn btn-default btn-sm">
                                        افزودن ویژگی
                                    </a>
                                    <a href="/Admin/Products/IndexEpisode/@item.ProductId" class="btn btn-success btn-sm">
                                        افزودن بخش
                                    </a>
                                    <a href="/Admin/Products/IndexPackage/@item.ProductId" class="btn btn-default btn-sm">
                                        افزودن پکیج
                                    </a>
                                    <a href="/Admin/Products/DeleteProduct/@item.ProductId" class="btn btn-danger btn-sm">
                                        حذف تخفیف
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

