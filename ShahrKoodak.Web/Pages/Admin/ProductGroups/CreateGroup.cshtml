@page "{id?}"
@model ShahrKoodak.Web.Pages.Admin.ProductGroup.CreateGroupModel
@{
    ViewData["Title"] = "ایجاد گروه جدید";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن گروه جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductGroup.ParentId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    گروه جدید
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه:</label>
                        <input type="text" asp-for="ProductGroup.GroupTitle" class="form-control">
                    </div>

                    <div>
                        <p></p>
                        <img id="imgCourse" class="thumbnail" src="/UserAvatar/Default.jpg" />
                        <div class="form-group">

                            <label>انتخاب تصویر</label>
                            <input type="file" name="imgCourseUp" id="imgCourseUp">
                        </div>
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />

                </div>
                <!-- /.panel-body -->
            </div>
        </div>


    </form>
</div>

<script>
    $("#imgCourseUp").change(function () {
        readURL(this);
    });
</script>
