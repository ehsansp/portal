@page
@model ShahrKoodak.Web.Pages.Admin.Question.IndexModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست سوالات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست ویژگی های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0">

                    <a class="btn btn-outline btn-success" href="/Admin/Question/CreateQuestion">افزودن سوال جدید</a>
                </div>


                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>

                            <th>عنوان سوال</th>
                            <th>سطح سوال</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Questions)
                    {
                        <tr>

                            <td>
                                @item.Title
                            </td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <p class="text-danger">سخت</p>
                                }
                                else
                                {
                                    <p class="text-success">آسان</p>
                                }
                            </td>

                            <td>
                                <a href="/Admin/Question/EditQuestion/@item.QuestionId" class="btn btn-warning btn-sm">
                                    ویرایش
                                </a>
                                <a href="/Admin/Question/AnswerIndex/@item.QuestionId" class="btn btn-success btn-sm">
                                    مدیریت پاسخ ها
                                </a>
                                <a href="/Admin/Question/DeleteQuestion/@item.QuestionId" class="btn btn-danger btn-sm">
                                    حذف سوالات
                                </a>
                            </td>
                        </tr>

                    }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
