@page "{id}"
@model ShahrKoodak.Web.Pages.Admin.Question.AnswerIndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست پاسخ ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست ویژگی های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0">

                    <a class="btn btn-outline btn-success" asp-route-id="@ViewData["QuestionId"].ToString()" asp-page="CreateAnswer">افزودن پاسخ جدید</a>
                </div>


                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>

                            <th>عنوان پاسخ</th>
                            <th>وضعیت</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Answers)
                        {
                            <tr>

                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @if (item.IsTrue == true)
                                    {
                                        <p class="text-success">پاسخ صحیح</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">غلط</p>
                                    }
                                </td>

                                <td>
                                    <a href="/Admin/Question/EditAnswer/@item.AnswerId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                   
                                    <a href="/Admin/Question/DeleteAnswer/@item.AnswerId" class="btn btn-danger btn-sm">
                                        حذف پاسخ
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
